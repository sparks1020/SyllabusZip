@model EditMaterialsViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    @using (Html.BeginForm("EditMaterials", "Editor", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
<div class="form-horizontal">
    <hr />
    <h4>Edit Material details</h4>
    @Html.HiddenFor(model => model.SyllabusId)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-10">
          Materials:  @Html.EditorFor(model => model.Material_Value, new { htmlAttributes = new { @class = "form-control", @style ="width: 100%; max-width: 100%; height: 100px;" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</div>
    }
}
