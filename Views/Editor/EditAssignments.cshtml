@model EditAssignmentViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    @using (Html.BeginForm("EditAssignments", "Editor", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
<div class="form-horizontal">
    <hr />
    <h4>Edit Assignment details</h4>
    @Html.HiddenFor(model => model.AssignmentId)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @*need item for Class Title*@
        @Html.LabelFor(model => model.ClassTitle, htmlAttributes: new { @class = "control-label col-md-2", @readonly = "readonly" })
        @*need item for assignment title*@
        @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
        @*need item for class content*@
        <div class="col-md-10">
          Homework:  @Html.EditorFor(model => model.Homework, new { htmlAttributes = new { @class = "form-control" } })
          Chapter:   @Html.EditorFor(model => model.Chapter, new { htmlAttributes = new { @class = "form-control" } })
          Project:   @Html.EditorFor(model => model.Project, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</div>
    }
}
