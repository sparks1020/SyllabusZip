@model EditExamViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    @using (Html.BeginForm("EditExams", "Editor", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            <h4>Edit Exam details</h4>
            @Html.HiddenFor(model => model.ExamId)
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                Exam Type:
                @*@Html.LabelFor(model => model.ExamType, htmlAttributes: new { @class = "control-label col-md-2", @readonly = "readonly" })*@
                @Html.EditorFor(model => model.ExamType, new { htmlAttributes = new { @class = "form-control" } })
                Exam Date:
                @*@Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2", @readonly = "readonly" })*@
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
}