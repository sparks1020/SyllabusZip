<h2>Reset Password</h2>
<a href="/Account/ResetPassword">Click Here to Reset Your Password</a>
<h2>Subscription Status</h2>
@if (object.Equals(ViewData["Expiration"], DateTime.MinValue))
{
    <div>No subscription! <a href="/Join">Join now</a></div>
}
else
{
    <ul>
        @{ var expiration = (DateTime)ViewData["Expiration"]; }
        <li>Expires: @(expiration == DateTime.MaxValue ? "Never" : expiration.ToString())</li>
        @if (expiration < DateTime.UtcNow)
        {
            <li><strong>Expired!</strong> <a href="/Join">Join now</a></li>
        }
        @if (!string.IsNullOrEmpty(ViewData["PortalUrl"] as string))
        {
        <li><a href="@ViewData["PortalUrl"]">Manage or cancel Subscription</a></li>
        }
    </ul>
}
